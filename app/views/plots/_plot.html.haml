.plot-header
  .plot-title= (@plot_data["date"])
  =button_tag 'Remove Plot', :class=>'delete-plot'
.plot-body
  .plot-calendar
    .date
    =select_hour(Time.now-2.hours, :ampm=>true, :class=>'hour')
    =select("phase","id",{"Phase A"=> "1", "Phase B"=>"2", "Phase C"=> "3"})
    =button_tag "Create Plot", :class=>'create-plot'  
  .plot-image
    %img{:src=>"http://bucket.mit.edu/cottage/assets/"+@plot_data["image_url"], :alt=>"Plot of P and Q!"}
